{
  "name": "svelte-lexical",
  "description": "Rich Text editor for Svelte based on lexical",
  "version": "0.5.2",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/umaranis/svelte-lexical",
    "directory": "svelte-lexical"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./dist/themes/default": {
      "types": "./dist/themes/default/index.d.ts",
      "svelte": "./dist/themes/default/index.js"
    }
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && pnpm package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --fail-on-warnings --compiler-warnings \"a11y-no-noninteractive-element-interactions:ignore,a11y-no-static-element-interactions:ignore\"",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "lint": "pnpm run format:check && eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check . --ignore-path ../../.gitignore"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.3.0",
    "@eslint/js": "^9.22.0",
    "@sveltejs/adapter-auto": "^4.0.0",
    "@sveltejs/kit": "^2.19.0",
    "@sveltejs/package": "^2.3.10",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.7",
    "@testing-library/user-event": "^14.6.1",
    "@tsconfig/svelte": "^5.0.4",
    "@types/lodash-es": "^4.17.12",
    "@vitest/ui": "^3.0.8",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-svelte": "^3.0.3",
    "globals": "^16.0.0",
    "jsdom": "^26.0.0",
    "prettier-plugin-organize-attributes": "^1.0.0",
    "prettier-plugin-svelte": "^3.3.3",
    "publint": "^0.3.8",
    "svelte": "^5.22.6",
    "svelte-check": "^4.1.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1",
    "vite": "^6.2.1",
    "vitest": "^3.0.8"
  },
  "keywords": [
    "lexical",
    "editor",
    "rich-text",
    "list",
    "svelte"
  ],
  "dependencies": {
    "@lexical/clipboard": "0.27.1",
    "@lexical/code": "0.27.1",
    "@lexical/file": "0.27.1",
    "@lexical/hashtag": "0.27.1",
    "@lexical/history": "0.27.1",
    "@lexical/html": "0.27.1",
    "@lexical/link": "0.27.1",
    "@lexical/list": "0.27.1",
    "@lexical/mark": "0.27.1",
    "@lexical/markdown": "0.27.1",
    "@lexical/overflow": "0.27.1",
    "@lexical/plain-text": "0.27.1",
    "@lexical/rich-text": "0.27.1",
    "@lexical/selection": "0.27.1",
    "@lexical/table": "0.27.1",
    "@lexical/text": "0.27.1",
    "@lexical/utils": "0.27.1",
    "@lexical/yjs": "0.27.1",
    "lexical": "0.27.1",
    "lodash-es": "^4.17.21",
    "prettier": "^3.2.5",
    "y-websocket": "1.5.4",
    "yjs": "13.6.2"
  }
}
