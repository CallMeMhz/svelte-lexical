{
  "name": "svelte-lexical",
  "description": "Rich Text editor for Svelte based on lexical",
  "version": "0.3.0",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/umaranis/svelte-lexical",
    "directory": "svelte-lexical"
  },
  "svelte": "src/index.ts",
  "module": "dist/index.mjs",
  "main": "dist/index.js",
  "scripts": {
    "build": "rollup -c",
    "prepublishOnly": "pnpm run build",
    "test": "jest src",
    "test:watch": "pnpm run test -- --watch",
    "lint": "eslint .",
    "svelte-check": "svelte-check"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/svelte": "^3.2.2",
    "@tsconfig/svelte": "^3.0.0",
    "@types/lodash-es": "^4.17.7",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "babel-jest": "^29.4.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-svelte3": "^4.0.0",
    "jest": "^29.4.0",
    "jest-environment-jsdom": "^29.4.0",
    "prettier-plugin-organize-attributes": "^0.0.5",
    "prettier-plugin-svelte": "^2.9.0",
    "rollup": "^3.11.0",
    "rollup-plugin-svelte": "^7.1.0",
    "svelte-check": "^3.0.3",
    "svelte-jester": "^2.3.2",
    "svelte-preprocess": "^5.0.1",
    "typescript": "^4.9.4"
  },
  "keywords": [
    "lexical",
    "editor",
    "rich-text",
    "list",
    "svelte"
  ],
  "files": [
    "src",
    "dist"
  ],
  "dependencies": {
    "@lexical/clipboard": "^0.7.6",
    "@lexical/code": "^0.7.6",
    "@lexical/file": "^0.7.6",
    "@lexical/hashtag": "^0.7.6",
    "@lexical/history": "^0.7.6",
    "@lexical/link": "^0.7.6",
    "@lexical/list": "^0.7.6",
    "@lexical/mark": "^0.7.6",
    "@lexical/overflow": "^0.7.6",
    "@lexical/plain-text": "^0.7.6",
    "@lexical/rich-text": "^0.7.6",
    "@lexical/selection": "^0.7.6",
    "@lexical/table": "^0.7.6",
    "@lexical/text": "^0.7.6",
    "@lexical/utils": "^0.7.6",
    "@lexical/yjs": "^0.7.6",
    "lexical": "^0.7.6",
    "lodash-es": "^4.17.21",
    "svelte": "^3.55.1",
    "y-websocket": "1.4.5",
    "yjs": "13.5.46",
    "prettier": "^2.8.4"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svelte$": "svelte-jester"
    },
    "moduleFileExtensions": [
      "js",
      "svelte"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ]
  }
}
